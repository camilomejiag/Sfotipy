@import "normalize.styl"

gris_oscuro = #333333
gris_claro = #818181

body
	font-size 16px
	font-family 'Varela', sans-serif

a 
	text-decoration none
figure
	margin 0

.relative
	position relative

.border-bottom
	border-bottom 1px solid gris_claro

.button-menu
	position absolute
	top 50%
	margin-top -10px
	left .5em

.container
	padding 1.4rem
	font-size 0
	text-align center

.name
	color gris_oscuro

.author
	color gris_claro

.menu 
	display none

.header
	height 3.5em
	/*a
		display none*/
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5 em

.song
	width 8rem
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	text-align left
	&:nth-child(even)
		margin-right 0

	p
		margin .5em 0

